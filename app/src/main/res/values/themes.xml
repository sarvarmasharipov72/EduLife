<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EduLife" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="suniy_intel">
        <item name="android:textSize">
            20sp
        </item>
        <item name="android:letterSpacing">
            0.02
        </item>
        <item name="android:textColor">
            #99000000
        </item>
        <item name="fontFamily">@font/source_sans_pro_extralight</item>
    </style>

    <style name="title">
        <item name="android:textSize">
            25sp
        </item>
        <item name="android:textColor">
            @color/black
        </item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/source_sans_pro_extralight</item>
    </style>
    <style name="toolbarProfile">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/source_sans_pro_semi_bold</item>
    </style>

    <style name="Theme.EduLife.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EduLife.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EduLife.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>