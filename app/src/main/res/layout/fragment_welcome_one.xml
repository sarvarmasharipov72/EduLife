<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Welcome.WelcomeFragmentOne">


        <ImageButton
            android:id="@+id/btnPrevWelcomeOne"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />
        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="@id/btnPrevWelcomeOne"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_frame"
            app:layout_constraintBottom_toBottomOf="@id/btnPrevWelcomeOne"
            app:layout_constraintEnd_toStartOf="@id/textIcon"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="1"
            />
        <TextView
            android:id="@+id/textIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edulife"
            android:theme="@style/title"
            app:layout_constraintStart_toEndOf="@id/imgIcon"
            app:layout_constraintTop_toTopOf="@id/imgIcon"
            app:layout_constraintBottom_toBottomOf="@id/imgIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="1"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"/>
        <ImageView
            android:id="@+id/imageViewQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_undraw_question"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.3"
            />
        <TextView
            android:id="@+id/textViewQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imageViewQ"
            android:layout_marginHorizontal="25dp"
            android:textSize="25sp"
            android:fontFamily="@font/source_sans_pro_semi_bold"
            android:letterSpacing="0.03"
            android:lineSpacingExtra="0sp"
            android:text="Keling bir savol javob qilamiz"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/textViewQ2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textViewQ"
            android:layout_marginHorizontal="18dp"
            android:text="Sizga bitta ikkita savollarimiz bor keyin sizga qaysi soha to’g’ri kelishini aytamiz"
            android:textSize="16sp"
            android:fontFamily="@font/source_sans_pro_extralight"
            android:gravity="center"
            android:layout_marginTop="5dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNextWelcomeOne"
            android:layout_width="324dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            app:cornerRadius="20dp"
            android:text="@string/keyingisi"
            android:fontFamily="@font/source_sans_pro_semi_bold"
            />


</androidx.constraintlayout.widget.ConstraintLayout>