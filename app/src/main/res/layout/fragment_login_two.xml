<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Login.LoginFragmentTwo">

    <ImageButton
        android:id="@+id/btnPrevLoginTwo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />
    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@id/btnPrevLoginTwo"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_frame"
        app:layout_constraintBottom_toBottomOf="@id/btnPrevLoginTwo"
        app:layout_constraintEnd_toStartOf="@id/textIcon"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="1"
        />
    <TextView
        android:id="@+id/textIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edulife"
        android:theme="@style/title"
        app:layout_constraintStart_toEndOf="@id/imgIcon"
        app:layout_constraintTop_toTopOf="@id/imgIcon"
        app:layout_constraintBottom_toBottomOf="@id/imgIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:fontFamily="@font/source_sans_pro_semi_bold"
        android:text="Ism"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.2"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginHorizontal="18dp"
        android:background="@drawable/kirish_button_background"
        android:hint="Ismingizni yozing...!"
        android:textSize="16sp"
        android:letterSpacing="0.02"
        android:textAlignment="textStart"
        android:paddingStart="23dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/source_sans_pro_extralight"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnKirishFragmentTwo"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        app:cornerRadius="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck"
        android:text="@string/kirish"
        android:textSize="16sp"
        android:fontFamily="@font/source_sans_pro_semi_bold"
        android:backgroundTint="#007E6F"/>


</androidx.constraintlayout.widget.ConstraintLayout>